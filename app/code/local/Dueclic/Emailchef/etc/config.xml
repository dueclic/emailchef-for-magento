<?xml version="1.0"?>
<config>
    <modules>
        <dueclic_emailchef>
            <version>1.0.0</version>
        </dueclic_emailchef>
    </modules>

    <global>
        <helpers>
            <dueclic_emailchef>
                <class>Dueclic_Emailchef_Helper</class>
            </dueclic_emailchef>
        </helpers>
        <models>
            <dueclic_emailchef>
                <class>Dueclic_Emailchef_Model</class>
            </dueclic_emailchef>
        </models>
        <blocks>
            <dueclic_emailchef>
                <class>Dueclic_Emailchef_Block</class>
            </dueclic_emailchef>
            <adminhtml>
                <rewrite>
                    <system_config_edit>Dueclic_Emailchef_Block_Adminhtml_System_Config_Edit</system_config_edit>
                </rewrite>
            </adminhtml>
        </blocks>
        <events>
            <admin_system_config_changed_section_emailchef>
                <observers>
                    <dueclic_emailchef>
                        <type>singleton</type>
                        <class>dueclic_emailchef/observer</class>
                        <method>maybeSyncEmailchef</method>
                    </dueclic_emailchef>
                </observers>
            </admin_system_config_changed_section_emailchef>
        </events>
    </global>
    <default>
        <emailchef>
            <general>
                <username></username>
                <password></password>
                <list></list>
                <policy></policy>
            </general>
        </emailchef>
    </default>
    <adminhtml>
        <layout>
            <updates>
                <dueclic_emailchef>
                    <file>emailchef.xml</file>
                </dueclic_emailchef>
            </updates>
        </layout>
    </adminhtml>
    <frontend>
        <routers>
            <dueclic_emailchef>
                <use>standard</use>
                <args>
                    <module>Dueclic_Emailchef</module>
                    <frontName>emailchef</frontName>
                </args>
            </dueclic_emailchef>
        </routers>
    </frontend>
</config>