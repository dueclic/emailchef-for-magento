                            <label>Policy</label>
                            <comment>Which policy would you like to use?</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>dueclic_emailchef/system_config_source_dropdown_policy</source_model>
                            <frontend_model>dueclic_emailchef/adminhtml_system_config_form_listpolicy</frontend_model>
                            <sort_order>15</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
